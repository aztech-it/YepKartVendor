<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.YepKart" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Theme.YepKart.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.YepKart.SplashScreen" parent="Theme.YepKart.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.YepKart.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.YepKart.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.YepKart.Title">
        <item name="android:textSize">@dimen/text_t4</item>
    </style>

    <style name="Theme.YepKart.SubTitle">
        <item name="android:textSize">@dimen/text_t6</item>
    </style>

    <style name="Theme.YepKart.BottomNavigationView">
        <item name="fontFamily">@font/varela_round</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.YepKart.H1">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_h1</item>
    </style>

    <style name="Theme.YepKart.H2">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_h2</item>
    </style>

    <style name="Theme.YepKart.H3">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_h3</item>
    </style>

    <style name="Theme.YepKart.H4">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_h4</item>
    </style>

    <style name="Theme.YepKart.H5">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_h5</item>
    </style>

    <style name="Theme.YepKart.H6">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_h6</item>
    </style>

    <style name="Theme.YepKart.B">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Theme.YepKart.Span">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Theme.YepKart.Money">
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:textSize">@dimen/text_t1</item>
    </style>

    <style name="Theme.YepKart.Hint">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_t5</item>
    </style>

    <style name="Theme.YepKart.TextInputLayout">
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="boxStrokeColor">@color/colorInfoDark</item>
        <item name="hintTextColor">@color/colorInfoDark</item>
        <item name="hintTextAppearance">@style/Theme.YepKart.Hint</item>
    </style>

    <style name="Theme.YepKart.EditText">
        <item name="android:paddingStart">@dimen/offset_0</item>
        <item name="android:paddingEnd">@dimen/offset_0</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_t5</item>
    </style>

</resources>