<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_250"
    android:background="@drawable/side_nav_bar"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/offset_20"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="@dimen/offset_15"
        android:contentDescription="@string/nav_header_desc"
        android:src="@drawable/ic_avatar_male"
        app:civ_circle_background_color="@color/colorSecondaryAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_5"
        android:text="Abhrajit Kundu"
        android:textAlignment="center"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 700 194 4712"
        android:textAlignment="center"
        android:textColor="@color/colorText"/>

</LinearLayout>